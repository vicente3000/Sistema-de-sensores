# API server
PORT=3000

# MongoDB (local dev)
MONGO_URI=mongodb://localhost:27017/greendata

# Cassandra (Docker local)
CASSANDRA_CONTACT_POINTS=127.0.0.1
CASSANDRA_DATACENTER=datacenter1
CASSANDRA_KEYSPACE=greendata

# CORS / Docs
SOCKET_IO_CORS_ORIGIN=*
ALLOWED_ORIGIN=*
ENABLE_DOCS=1

# Readings validation / limits
READINGS_STRICT_VALIDATE=0
READINGS_MAX_BATCH=1000

# Alerts tuning (optional)
# seconds to dedup same sensor+level alerts (update last instead of creating)
ALERTS_DEDUP_SECONDS=60
# TTL for alerts collection (choose one)
# ALERTS_TTL_DAYS=30
# ALERTS_TTL_SECONDS=2592000

# Observability
LOG_LEVEL=info
