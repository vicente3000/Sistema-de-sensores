# Puerto del servidor Express
PORT=3000

# ====== MongoDB ======
# URI de conexión al contenedor de Mongo (si usas Docker Compose)
MONGO_URI=mongodb://mongo:27017/greendata

# Si estás ejecutando sin Docker (localmente), usa esto:
# MONGO_URI=mongodb://localhost:27017/greendata

# ====== Cassandra ======
CASSANDRA_CONTACT_POINTS=127.0.0.1
# Dirección del contenedor (en Docker Compose)
CASSANDRA_HOST=cassandra
# Si estás local, usa 127.0.0.1

CASSANDRA_DATACENTER=dc1
CASSANDRA_KEYSPACE=greendata

# ====== Configuración de Socket.IO (si lo usas) ======
SOCKET_IO_CORS_ORIGIN=*
