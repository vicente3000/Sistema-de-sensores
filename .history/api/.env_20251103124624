# Puerto del servidor Express
PORT=3000

# ====== MongoDB ======
# URI de conexión local (host)
MONGO_URI=mongodb://localhost:27017/greendata

# Si estás ejecutando sin Docker (localmente), usa esto:
# MONGO_URI=mongodb://localhost:27017/greendata

# ====== Cassandra ======
# Para Node en host y Cassandra en Docker
CASSANDRA_CONTACT_POINTS=127.0.0.1
# Nombre del datacenter (cassandra:4.1 suele exponer 'datacenter1')
CASSANDRA_DATACENTER=datacenter1
CASSANDRA_KEYSPACE=greendata

# ====== Configuración de Socket.IO (si lo usas) ======
SOCKET_IO_CORS_ORIGIN=*

